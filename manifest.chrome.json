{
  "manifest_version": 3,
  "name": "twiffs",
  "version": "1.0",
  "description": "edited tweet history diff highlighting ➕➖",
  "icons": {
    "48": "icons/icon-48px.png",
    "96": "icons/logo-96px.png"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["script.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}
